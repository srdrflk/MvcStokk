@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model List<TBLMUSTERILER>
@*@model PagedList.IPagedList<TBLMUSTERILER>*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered" id="tbl1">
    <thead >
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ ADI</th>
            <th>MÜŞTERİ SOYADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mus in Model)
        {
        <tr>
            <th>@mus.MUSTERIID</th>
            <td>@mus.MUSTERIAD</td>
            <td>@mus.MUSTERISOYAD</td>
            <td>@Html.ActionLink("SİL","SIL",new { id=mus.MUSTERIID},new { @class="btn btn-danger", onclick="return confirm('Silmek istediğinizden emin misiniz?')"})</td>
            @*<td><a href="/MUSTERI/Sil/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>*@
            <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
    </tbody>
</table>
@*@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))*@
<a href="/MUSTERI/YeniMusteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
